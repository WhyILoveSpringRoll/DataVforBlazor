@namespace DataVforBlazor
@inherits BoderBase

<div id="@ID" class="dv-border-box-10" style="box-shadow: inset 0 0 25px 3px @MergedColor[0];width:@width;height:@height;">
    <svg class="dv-border-svg-container" style="width:@width;height:@height;">
        <polygon fill="@BackgroundColor" points="
        4, 0 @(Width - 4), 0 @(Width), 4 @(Width), @(Height - 4) @(Width - 4), @(Height)
        4, @(Height) 0, @(Height - 4) 0, 4
      "/>
    </svg>
    @foreach (var item in border)
    {
        <svg width="150px"
         height="150px"
         key="@item"
         class="@item dv-border-svg-container">
            <polygon fill="@MergedColor[1]"
                 points="40, 0 5, 0 0, 5 0, 16 3, 19 3, 7 7, 3 35, 3" />
        </svg>
    }


    <div class="border-box-content">
        <div class="border-box-inside">
            @ChildContent
        </div>
    </div>
</div>

