
<div style="margin-bottom:55px;">
    <Title Level="3" Style="color:black">@componentName</Title>
    <div style="width:680px;height:240px;background-color:#282c34;padding:45px;">
        <Dv_border_box_11 Title="@title" TitleWidth="titleWidth" MergedColor="@(new List<string>{color1,color2})" BackgroundColor="@backgroundcolor">
            <Title Level="4" Style="color:#46bd87">@componentName</Title>
        </Dv_border_box_11>
    </div>
    <div style="width:680px;height:63px;border-radius:6px;background-color:#282c34;margin-top:20px;padding-left:20px;line-height:63px">
        <span style="color:white;font-size:0.85rem">@("<")</span><span style="color:#e750e7;font-size:0.85rem">@componentName</span><span style="color:white;font-size:0.85rem">@(">Dv_border_box<")</span><span style="color:#e750e7;font-size:0.85rem">@componentName</span><span style="color:white;font-size:0.85rem">@("/>")</span>
    </div>
   <Descriptions Style="margin-top:20px;width:680px" Title="参数配置" Bordered Column="3">
        <DescriptionsItem Title="主色："><input type="color" @bind-value="@color1" /></DescriptionsItem>
        <DescriptionsItem Title="副色："> <input type="color" @bind-value="@color2" /></DescriptionsItem>
        <DescriptionsItem Title="背景色："> <input type="color" @bind-value="@backgroundcolor" /></DescriptionsItem>
   </Descriptions>

    <Descriptions Style="margin-top:20px;width:680px" Title="特殊配置" Bordered Column="3">
        <DescriptionsItem Title="标题："><Input  @bind-Value="@title" /></DescriptionsItem>
        <DescriptionsItem Title="标题宽度："> <AntDesign.InputNumber @bind-Value="titleWidth" Min="250" Max="500" DefaultValue="250"></AntDesign.InputNumber></DescriptionsItem>
    </Descriptions>
</div>


@code
{
    string title = "Title";
    int titleWidth = 250;
    string componentName = "Dv_border_box_11";
    string color1 = "#8aaafb";
    string color2 = "#1f33a2";
    string backgroundcolor = "transparent";

}