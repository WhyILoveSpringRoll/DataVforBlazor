
<div style="margin-bottom:55px;">
    <Title Level="3" Style="color:black">@componentName</Title>
    <div style="width:680px;height:240px;background-color:black;padding:45px;">
        <Dv_border_box_4 Reverse="@reverse" MergedColor="@(new List<string>{color1,color2})" BackgroundColor="@backgroundcolor">
            <Title Level="4" Style="color:#46bd87">@componentName</Title>
        </Dv_border_box_4>
    </div>
    <div style="width:680px;height:63px;border-radius:6px;background-color:black;margin-top:20px;padding-left:20px;line-height:63px">
        <span style="color:white;font-size:0.85rem">@( "<")</span><span style="color:#e750e7;font-size:0.85rem">@componentName</span>
        @if (reverse)
        {
            <span style="color:#e750e7;font-size:0.85rem"> Reverse</span>
        }
        <span style="color:white;font-size:0.85rem">@(">Dv_border_box<")</span><span style="color:#e750e7;font-size:0.85rem">@componentName</span><span style="color:white;font-size:0.85rem">@("/>" )
        </span>
    </div>
    <Descriptions Style="margin-top:20px;width:680px" Title="参数配置" Bordered Column="4">
        <DescriptionsItem Title="主色："><input type="color" @bind-value="@color1" /></DescriptionsItem>
        <DescriptionsItem Title="副色："> <input type="color" @bind-value="@color2" /></DescriptionsItem>
        <DescriptionsItem Title="背景色："> <input type="color" @bind-value="@backgroundcolor" /></DescriptionsItem>
        <DescriptionsItem Title="选则方向："> <Switch @bind-Checked="reverse" CheckedChildren="反向" UnCheckedChildren="正向" /></DescriptionsItem>
    </Descriptions>
</div>


@code
{
    bool reverse = false;
    string componentName = "Dv_border_box_4";
    string color1 = "red";
    string color2 = "rgba(0,0,255,0.8)";
    string backgroundcolor = "transparent";

}