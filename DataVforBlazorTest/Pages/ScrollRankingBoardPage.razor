@page "/ScrollRankingBoard"
@using DataVforBlazor
@using System.ComponentModel
@using AntDesign.TableModels
@using DataVforBlazorTest.Pages.ExampleComponents.ScrollRankingBoard
@using Newtonsoft.Json
<PageTitle>排名轮播表</PageTitle>
<div style="width:610px;height:350px;background-color:#282c34;align-items:center;justify-content:center;display:flex">
